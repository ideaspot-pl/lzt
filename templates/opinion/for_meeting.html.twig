{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="p-3 mx-auto text-center">
            <h1 class="display-4 fw-normal text-body-emphasis">{{ meeting.name }}</h1>
            <p class="lead">What's your opinion on {{ meeting.name }}
                on {{ meeting.start | date('d.m.Y H:i') }}
                by {{ meeting.teacher }}?
            </p>
        </div>
        {{ form(form) }}
    </div>
{% endblock %}
